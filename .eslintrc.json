{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:ava/recommended",
    "standard-with-typescript"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "tsconfig.json"
    ]
  },
  "rules": {
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/strict-boolean-expressions": "off",
    "ava/no-ignored-test-files": "off"
  }
}